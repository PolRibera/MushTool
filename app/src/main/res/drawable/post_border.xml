<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado cuando el botón está presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#800000" />
            <stroke
                android:width="1dp"
            android:color="#000000" />
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" />
        </shape>
    </item>
    <!-- Estado predeterminado -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Granate claro -->
            <stroke
                android:width="1dp"
            android:color="#000000" />
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" />       <!-- Espacio interno -->
        </shape>
    </item>
</selector>
